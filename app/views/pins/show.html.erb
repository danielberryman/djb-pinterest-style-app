<div class="center header">
	<h1 class="center"><strong>Title <%= @pin.title %></strong></h1>
	<div class="form">
		<p>Created by: <%= @pin.user.username %> | Description: <%= @pin.text %> | URL: 
			<a href="<%= "#{@pin.url}" %>" target="_blank">
				<%= "#{@pin.url}" %>
			</a>
		</p>
	</div>
	<img src="<%= @pin.avatar.url(:medium) %>">
	<%= render 'shared/repin_form' %>  
	<% if @pin.user == current_user %>
		<p><%= link_to "Delete this pin", pin_path(@pin), method: :delete, data: {confirm: "Are you sure you want to delete this pin?"} %> |
	<% end %>
			<%= link_to 'Back to pins list', pins_path %>
		</p>
</div>

