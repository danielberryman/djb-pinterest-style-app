<h1 class="center"><%= @pin.title %></h1>
<div class="form">
	<p>Pin type: <%= @pin.category_id %></p>
	<p>Created by: <%= @pin.user.username %></p>
	<p>Description: <%= @pin.text %></p>
	<p>URL: 
		<a href="<%= "#{@pin.url}" %>" target="_blank">
			<%= "#{@pin.url}" %>
		</a>
	</p> 
	<% if @pin.user == current_user %>
		<p><%= link_to 'Delete this pin', pin_path(@pin), method: :delete, data: {confirm: "Are you sure you want to delete this pin?"} %></p>
	<% end %>
	<p><%= link_to 'Back to pins list', pins_path %></p>
</div>





