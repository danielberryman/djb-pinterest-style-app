<div class="center header">
	<h1 class="center"><strong>Welcome to your profile: <%= @user.username %></strong></h1>
	<div class="form">
		<p>Username: <%= @user.username %> | Email: <%= @user.email %></p>
		<p><%= link_to "Edit your profile", edit_user_path(@user) %> | <%= link_to "Delete your account & it's associated pins", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete your account and all associated pins created by this account?"} %> | <%= link_to 'Back to users list', users_path %></p>
	</div>
</div>

<%= render 'shared/pins_list' %>
