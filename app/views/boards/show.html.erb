<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @board.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @board.user %>
</p>

<div class="pins">
	<% @pinnings.each_slice(3) do |row| %>
		<% row.each do |pinning| %>
			<div class="pin-container col-xs-4">
				<div class="logo-thumbnail col-md-4">
				  <% if "#{pinning.pin.category_id}" == "2" %>
                      <%= image_tag('rails-logo-thumbnail.png') %>
                  <% elsif "#{pinning.pin.category_id}" == "1" %>
                      <%= image_tag('ruby-logo-thumbnail.png') %>
                  <% end %>
				</div>
				<div class="pin-info col-md-8">
					<ul>
						<li><%= pinning.pin.title %></li>
						<li><%= 'Profile pic' %></li>
						<li><%= pinning.pin.url %></li>
						<li><%= link_to 'View', pin_path(pinning) %></li>
						<% if logged_in? && current_user == pinning.user_id %>
							<li>
								<%= link_to 'Edit', edit_pin_path(pin) %>
								<%= link_to 'Delete', pin_path(pin), method: :delete, data: {confirm: "Are you sure you want to delete this pin?"} %>
							</li>
							<li>
								<%= link_to repin_path(pin), class: 'btn btn-default', method: 'post' do %>
									Repin!
								<% end %>
							</li>
						<% end %>
					</ul>
				</div>
			</div>
		<% end %>
	<% end %>
</div>

<%= link_to 'Edit', edit_board_path(@board) %> |
<%= link_to 'Back', boards_path %>
