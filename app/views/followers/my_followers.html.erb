<p id="notice"><%= notice %></p>

<div class="center header">
  <h1><strong>My Followers</strong></h1>
  <p class="link"><%= link_to 'New Follower', new_follower_path%></p>
</div>

<div class="col-md-8 col-md-offset-2">
  <table class="table">
	  <thead>
	    <tr>
	      <th class="no-border">User</th>
	      <th class="no-border">Follower</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @followers.each do |follower| %>
	      <tr>
	        <td><%= follower.user.username %></td>
	        <td><%= follower.follower_id %></td>
	        <td class="link"><%= link_to 'Show', follower %></td>
	        <td class="link"><%= link_to 'Edit', edit_follower_path(follower) %></td>
	        <td class="link"><%= link_to 'Unfollow', follower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>




